{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ actor.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ actor.name }}</td>
        </tr>
        <tr>
            <th>Acteur :</th>
            <td>
                <ul>
                {% for program in actor.programs %}
